<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    x:Class="App2.Views.LanguageView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    WidthRequest="150">
    <StackLayout>
        <Image Source="{Binding ImageSource}" Style="{StaticResource LanguageOptionImageStyle}" />
        <Label Style="{StaticResource LanguageOptionTitleStyle}" Text="{Binding Title}" />
        <Label Style="{StaticResource LanguageOptionDescriptionStyle}" Text="{Binding Subtitle}" />
    </StackLayout>
</Frame>