<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Start developing now. Just login and unleash the power of mobile developing!" FontSize="Title" Padding="30,10,30,10"/>
        <Image Source="https://sumodh.com/wp-content/uploads/2018/03/xamagon.png"
               HeightRequest="200" />
        <Entry x:Name="userEntry" Placeholder="User" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked"/>
    </StackLayout>

</ContentPage>
